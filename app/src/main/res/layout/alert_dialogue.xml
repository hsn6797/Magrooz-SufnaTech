<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/backgroundalert"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/TextColor"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alert"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oopss..!"
            android:textSize="20sp"
            android:textColor="@color/TextColor"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="No opposite gender found! Would you like to chat with same gender?"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:textSize="15dp"
                android:text="Cancel"
                android:textColor="@color/TextColor"
                android:background="@drawable/cancelbuttonalert" />

            <Button
                android:id="@+id/okbtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="OK"
                android:textSize="15dp"
                android:layout_marginStart="55dp"
                android:background="@drawable/custom_person_button"
                />



        </LinearLayout>

    </LinearLayout>



</LinearLayout>