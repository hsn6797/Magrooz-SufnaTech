<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundApp"
    tools:context=".Activities.LoginActivity">


    <LinearLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mid_linear"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please select your gender to proceed"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_margin="5dp"
            android:textStyle="normal" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/mid_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

       >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logoimg"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:gravity="center"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/midDwn_linera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/top_linear"
        android:gravity="center"
        android:padding="9dp"
       >


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Malebtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:background="@drawable/custom_person_button"
            android:src="@drawable/ic_person_male" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/femalebtn"
            android:layout_width="120dp"
            android:padding="5dp"
            android:background="@drawable/custom_person_button"
            android:layout_margin="20dp"
            android:layout_height="50dp"
            android:textSize="120dp"
            android:scaleType="fitCenter"

            android:src="@drawable/ic_person_female" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginbtn_Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:gravity="center"

        android:layout_below="@+id/midDwn_linera"
>

        <Button
            android:id="@+id/letsGObtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Lets Go"
            android:background="@drawable/custom_button"
            android:textColor="#FFF"
            android:drawableBottom="@drawable/ic_right_arrow"
            android:layout_centerInParent="true"
            android:textSize="18dp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/AdsBanner"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adView"
            ads:adSize = "BANNER"
            ads:adUnitId = "@string/admob_banner_id1"

            />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/versionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AdsBanner"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:textColor="@color/TextColor"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/versionNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/versionText"
            android:text="0.1"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>


</RelativeLayout>